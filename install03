#!/bin/bash

termux-setup-storage

pkg install termux-am x11-repo -y
pkg install xorg-xrandr -y
pkg install termux-x11-nightly feh tint2 picom xfce4-taskmanager caja -y
pkg install openbox -y
cd /data/data/com.termux/files
rm -rf opt
wget https://github.com/mebabo1/menano/releases/download/Box/box64.tar.xz
wget https://github.com/mebabo1/menano/releases/download/Box/python.tar.gz
wget https://github.com/mebabo1/menano/releases/download/Box/caja.tar.gz
wget https://github.com/mebabo1/menano/releases/download/Box/cajaf.tar.gz
wget https://github.com/mebabo1/menano/releases/download/Box/cajarun.tar.gz
wget https://github.com/mebabo1/menano/releases/download/Box/openbox_menu.tar.gz
tar xf box64.tar.xz
rm -rf box64.tar.xz
tar xf python.tar.gz
rm -rf python.tar.gz
tar xf caja.tar.gz
rm -rf caja.tar.gz
tar xf cajaf.tar.gz
rm -rf cajaf.tar.gz
tar xf cajarun.tar.gz
rm -rf cajarun.tar.gz
tar xf openbox_menu.tar.gz
rm -rf openbox_menu.tar.gz
cd /sdcard/
wget https://github.com/mebabo1/menano/releases/download/Box/Box64Droid01.tar.xz
tar xf Box64Droid01.tar.gz
rm -rf Box64Droid01.tar.gz
cd
echo "run x11"
rm -rf install03
