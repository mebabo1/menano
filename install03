#!/bin/bash

termux-setup-storage

pkg install termux-am x11-repo -y
pkg install xorg-xrandr -y
pkg install termux-x11-nightly -y
pkg install feh -y
pkg ins tint2 -y
pkg install picom -y
pkg install openbox -y
cd /data/data/com.termux/files
rm -rf opt
wget https://github.com/mebabo1/menano/releases/download/Box/box64.tar.xz
tar xf box64.tar.xz
rm -rf box64.tar.xz
cd /sdcard/
wget https://github.com/mebabo1/menano/releases/download/Box/Box64Droid01.tar.gz
tar xf Box64Droid01.tar.gz
rm -rf Box64Droid01.tar.gz
cd
echo "run x11 and x44"
rm -rf install03
