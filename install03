#!/bin/bash

termux-setup-storage

pkg install termux-am x11-repo -y
pkg install xorg-xrandr -y
pkg install termux-x11-nightly feh tint2 picom xfce4-taskmanager caja -y
pkg install openbox -y
cd /data/data/com.termux/files
rm -rf opt
echo "download05"
wget https://github.com/mebabo1/menano/releases/download/Box/box64.tar.xz >/dev/null 2>&1
echo "download04"
wget https://github.com/mebabo1/menano/releases/download/Box/python.tar.gz >/dev/null 2>&1
echo "download03"
wget https://github.com/mebabo1/menano/releases/download/Box/caja.tar.gz >/dev/null 2>&1
echo "download02"
wget https://github.com/mebabo1/menano/releases/download/Box/cajaf.tar.gz >/dev/null 2>&1
echo "download01"
wget https://github.com/mebabo1/menano/releases/download/Box/cajarun.tar.gz >/dev/null 2>&1
echo "download00"
wget https://github.com/mebabo1/menano/releases/download/Box/openbox_menu.tar.gz >/dev/null 2>&1
tar xf box64.tar.xz
tar xf python.tar.gz
tar xf caja.tar.gz
tar xf cajaf.tar.gz
tar xf cajarun.tar.gz
tar xf openbox_menu.tar.gz
rm -rf openbox_menu.tar.gz box64.tar.xz python.tar.gz caja.tar.gz cajaf.tar.gz cajarun.tar.gz
wget https://github.com/mebabo1/menano/releases/download/Box/Box64Droid01.tar.xz
rm -rf /sdcard/Box64Droid01
tar xf Box64Droid01.tar.gz
mv Box64Droid01 /sdcard
rm -rf Box64Droid01.tar.gz
cd
echo "run x11"
rm -rf install03
