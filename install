#!/bin/bash
clear
termux-setup-storage
echo "pkg update."
pkg update -y
echo "install x11-repo."
pkg install wget
wget https://github.com/mebabo1/menano/blob/File/output-metadata.json
wget https://github.com/mebabo1/menano/blob/File/termux-x11-1.02.07-0-all.deb
wget https://github.com/mebabo1/menano/blob/File/termux-x11-1.02.07-0-any.pkg.tar.xz
pkg install x11-repo && pkg install xorg-server-xvfb -y && dpkg -i ./*.deb
apt -f install -y
echo "pkg install nano pulseaudio."
pkg install nano pulseaudio -y
echo 'pulseaudio --start --load="module-native-protocol-tcp auth-ip-acl=127.0.0.1 auth-anonymous=1" --exit-idle-time=-1' >> ~/.bashrc
source ~/.bashrc
echo "allow-external-apps = true"
>> ~/.termux/termux.properties
echo "hide-soft-keyboard-on-startup = true" 
>> ~/.termux/termux.properties
rm -rf termux-x11-1.02.07-0-all.deb install termux-x11-1.02.07-0-any.pkg.tar.xz output-metadata.json
pkg install proot-distro
