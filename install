#!/bin/bash
clear
mkdir -p "$HOME/bin"
export PATH="$PATH:$HOME/bin"
or .profile
if [[ -f ~/.bashrc ]]; then
    SHELL_PROFILE=~/.bashrc
elif [[ -f ~/.bash_profile ]]; then
    SHELL_PROFILE=~/.bash_profile
else
    SHELL_PROFILE=~/.profile
fi
if ! grep -q 'export PATH="$PATH:$HOME/bin"' "$SHELL_PROFILE"; then
    echo 'export PATH="$PATH:$HOME/bin"' >> "$SHELL_PROFILE"
fi
source "$SHELL_PROFILE"
termux-setup-storage
echo "pkg update 02"
pkg update -y
echo "install x11-repo 01"
pkg install wget -y >/dev/null 2>&1
wget https://github.com/mebabo1/menano/releases/download/Box/x11.tar.gz >/dev/null 2>&1
tar xf x11.tar.gz
pkg install x11-repo -y >/dev/null 2>&1
dpkg -i ./*.deb  >/dev/null 2>&1
apt -f install -y >/dev/null 2>&1
echo "pkg install nano pulseaudio 00"
pkg install nano pulseaudio -y >/dev/null 2>&1
rm -rf x11.tar.gz termux-x11-nightly-1.03.00-0-all.deb termux-x11-nightly-1.03.00-0-any.pkg.tar.xz install
