#!/bin/bash
clear
termux-setup-storage
echo "pkg update."
pkg update -y
echo "install x11-repo."
pkg install wget -y &>/dev/null
wget https://github.com/mebabo1/menano/blob/File/termux-x11-1.02.07-0-all.deb &>/dev/null
pkg install x11-repo -y &>/dev/null
pkg install xorg-server-xvfb -y &>/dev/null
dpkg -i ./*.deb &>/dev/null
apt -f install -y &>/dev/null
echo "pkg install nano pulseaudio."
pkg install nano pulseaudio -y &>/dev/null
rm -rf termux-x11-1.02.07-0-all.deb install
echo "pkg install proot-distro."
pkg install proot-distro -y &>/dev/null
